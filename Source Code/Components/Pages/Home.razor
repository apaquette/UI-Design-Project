@page "/home"

@rendermode InteractiveServer

@inject NavigationManager NavigationManager

@using WellnessWorks.Components.Modular_Components

<PageTitle>Wellness Works | Home</PageTitle>

<RadzenCard Style="padding: 0; min-height: 80vh; border: 5px solid black;">
    <RadzenHeader Style="padding-top: 10px; padding-bottom: 10px; position: relative; min-width: 70vw; padding-left: 2vw; padding-right: 2vw;">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenText Text="Daily Summary" TextStyle="TextStyle.H4" class="text-white" />
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.End" JustifyContent="JustifyContent.Normal" Gap="0">
                    <RadzenText class="text-white" Text="Day" />
                    <RadzenText class=text-white Text="Streak" />
                </RadzenStack>
                <RadzenText class="text-white" Text="10" TextStyle="TextStyle.DisplayH3" />
            </RadzenStack>
        </RadzenStack>
    </RadzenHeader>

    <RadzenColumn style="margin: 15px;">
        <RadzenRow>
            <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                <CircleContainer TopText="5kg" TopText_Style="font-size: 28px;" BottomText="Lost" BottomText_Style="font-size: 16px;" Style="width: 100px; height: 100px;" />
                <RadzenButton Click='() => NavigationManager.NavigateTo("/fitness")' Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" Style="margin-top: -30px; background-color: var(--primary-color-tone-1)" class="rz-border-radius-10 act-btn" />
            </RadzenStack>
        </RadzenRow>
        <RadzenRow AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.End" Gap="25px" JustifyContent="JustifyContent.Center" Wrap="FlexWrap.Wrap">
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <CircleContainer TopText="2247" TopText_Style="font-size: 65px;" BottomText="Calories Consumed" BottomText_Style="font-size: 18px;" />
                    <RadzenButton Click='() => NavigationManager.NavigateTo("/nutrition")' Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" Style="margin-top: -50px; background-color: var(--primary-color-tone-1)" class="rz-border-radius-10 act-btn" />
                </RadzenStack>
                <CircleContainer TopText="357" TopText_Style="font-size: 65px;" BottomText="Calories Remaining" BottomText_Style="font-size: 18px;" Style="width: 300px; height: 300px;" />
                    
                <RadzenStack Orientation="Orientation.Vertical" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center">
                    <CircleContainer TopText="304" TopText_Style="font-size: 65px;" BottomText="Calories Burned" BottomText_Style="font-size: 18px;" />
                    <RadzenButton Click='() => NavigationManager.NavigateTo("/fitness")' Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" Style="margin-top: -50px; background-color: var(--primary-color-tone-1)" class="rz-border-radius-10 act-btn" />
                </RadzenStack>
            </RadzenStack>
        </RadzenRow>
    </RadzenColumn>
</RadzenCard>