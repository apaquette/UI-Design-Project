@page "/settings"

<PageTitle>Wellness Works | Settings</PageTitle>

<RadzenCard Style="padding: 0; min-height: 80vh; border: 5px solid black;">
    <RadzenHeader Style="padding-top: 10px; padding-bottom: 10px; position: relative; min-width: 70vw; padding-left: 2vw; padding-right: 2vw;">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.SpaceBetween">
            <RadzenText Text="Settings" TextStyle="TextStyle.H4" class="text-white"  />
            <RadzenButton Text="Save" Icon="save" class="reg-btn" Style="background-color: var(--secondary-color-tone-1);" />
        </RadzenStack>
    </RadzenHeader>

    <RadzenStack style="margin-top: 20px;" Orientation="Orientation.Horizontal" Wrap="FlexWrap.Wrap" AlignItems="AlignItems.Center" Gap="30" JustifyContent="JustifyContent.SpaceAround">
        @foreach(string section in new List<string> {"Profile", "Health", "Fitness", "Nutrition" }) {
            <RadzenCard Style="padding: 0; min-height: 30vh; width: 35vw; border: 3px solid black;">
                <RadzenHeader Style="padding-top: 10px; padding-bottom: 10px; position: relative; padding-left: 2vw; padding-right: 2vw;">
                    <RadzenText Text=@(section) TextStyle="TextStyle.H6" class="text-white" />
                </RadzenHeader>
            </RadzenCard>
        }
    </RadzenStack>
</RadzenCard>